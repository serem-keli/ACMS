{% extends "base.njk" %}

{% block content %}
<main>
  <div class="container w-100 ">
    <h3 class="text-center text-dark fw-bold p-2">Dashboard</h3>
    <div class=" row fw-bold text-dark ">
      <div class="rounded col m-2 bg-secondary p-2 ">
        <p>Stat 1</p>
      </div>
      <div class="rounded col m-2 bg-secondary p-2 ">
        <p>Stat 2</p>
      </div>
      <div class="rounded col m-2 bg-secondary p-2 ">
        <p>Stat 3</p>
      </div>
    </div>
    <div class="row py-3 bg-dark mt-3">
      <table class="table text-light rounded">
        <div class="d-flex justify-content-between">
          <p class="p-2 fs-4 fw-bolder text-success">List of Residents</p>
          <div>
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
              Add Resident
            </button>
          </div>
        </div>
        <thead>
          <tr class="text-success">
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Date Admitted</th>
            <th scope="col">Gender</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">1</th>
            <td>Mark</td>
            <td>Otto</td>
            <td>@mdo</td>
          </tr>
          <tr>
            <th scope="row">2</th>
            <td>Jacob</td>
            <td>Thornton</td>
            <td>@fat</td>
          </tr>
          <tr>
            <th scope="row">3</th>
            <td colspan="2">Larry the Bird</td>
            <td>@twitter</td>
          </tr>
        </tbody>
      </table>

      <!-- New Resident Form Modal -->
      <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <div class="modal-title w-100">
                <h5 class="text-center" id="staticBackdropLabel">New Resident</h5>
                <p class="text-center">Add resident Information</p>
              </div>
            </div>
            <div class="modal-body">
              <form action="/residents" method="post">
                <div class="row py-2">
                  <div class="col">
                    <input type="text" name="fullName" class="form-control w-100 shadow-none" placeholder="Full Name">
                  </div>
                  <div class="col">
                    <input type="text" name="address" class="form-control w-100 shadow-none" placeholder="Address">
                  </div>
                </div>
                <div class="row py-2">
                  <div class="col">
                    <input type="tel" name="phone" class="form-control w-100 shadow-none" placeholder="Phone">
                  </div>
                  <div class="col">
                    <input type="email" name="email" class="form-control w-100 shadow-none" placeholder="Email Address">
                  </div>
                  <div class="col">
                    <select class="form-select" name="gender" required>
                      <option value="male" selected>Male</option>
                      <option value="male">Female</option>
                      <option value="male">Other</option>
                    </select>
                  </div>
                </div>
                <div class="py-3">
                  <input type="password" name="password" class="form-control w-100 shadow-none" placeholder="Password">
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary">Add Resident</button>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</main>
{% endblock %}